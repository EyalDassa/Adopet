<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Paw Prints -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/signup_IMG_pawPrints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:scaleType="fitStart"
        android:src="@drawable/paw_prints_path" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- Adopet Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/signup_TXT_h1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lobster_regular"
            android:gravity="center"
            android:layout_marginVertical="15dp"
            android:text="Adopet"
            android:textColor="@color/colorPrimary"
            android:textSize="100sp"
            android:textStyle="bold" />


        <!-- Find your new furry friend today! -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/signup_TXT_h2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/lobster_regular"
            android:gravity="center"
            android:text="Find your new furry friend today!"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <!-- Logo -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/signup_IMG_logo"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginVertical="20dp"
            android:src="@drawable/logo" />


    </LinearLayout>
    <!-- Sign Up Button -->
    <Button
        android:id="@+id/signup_BTN_signup"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="30dp"
        android:text="Sign In"
        android:textColor="@color/black" />

</RelativeLayout>
